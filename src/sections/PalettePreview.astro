---
import type { generateScale } from '~/lib/index.ts'

type ColorScale = ReturnType<typeof generateScale>

interface Props {
  colors: ColorScale
}

const { colors } = Astro.props
---

<section
  data-section='palette-preview'
  class='my-6 flex flex-wrap justify-center gap-4'
  id='palette-preview'
>
  {colors.map(({ shade, hex }) => (
    <div
      class:list={['group relative size-14 rounded-xl shadow-sm transition-transform hover:scale-110 cursor-pointer', `bg-[${hex}]`]}
      data-shade={shade}
    >
      <span class='absolute inset-0 flex items-center justify-center opacity-0 transition-opacity group-hover:opacity-100'>
        <span class='rounded bg-black/50 px-1.5 py-0.5 text-[10px] font-mono text-white'>
          {shade}
        </span>
      </span>
    </div>
  ))}
</section>
